---
import Layout from '../layouts/Layout.astro';
const pageTitle = "About Me";

const infoAboutMe = {
  firstName: "Austin",
  lastName: "LeBlanc",
  state: "Michigan",
  occupation: "??????",
  hobbies: ["think of things later"],
};
const skills = [
  "Python",
  "C",
  "C++",
  "HTML/CSS",
  "Java",
  "JavaScript",
  "TypeScript(Hopefully after this?)",
  "Assembly",
  "Database (relational and non-relational)",
  "Flutter",
];
const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---
<Layout title="About Me">
    

<html lang="en">
    <style define:vars={{ skillColor, fontWeight, textCase }}>
        h1 {
          color: purple;
          font-size: 4rem;
        }
        .skill {
          /* color: var(--skillColor); */
          color: lightgray;
          font-weight: var(--fontWeight);
          text-transform: var(--textCase);
        }
        
        img.pfp {
          max-height: 50vh;
          max-width: 50vw;
          border: 7px solid black;
          border-radius: 10%;
        }
        div.personal-info {
          max-width: 40vw;
          color: whitesmoke;
        }
        
      </style>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    
    <h1 class="page-title">{pageTitle}</h1>
    
    <div class="container">
        <div>
            <img  class="pfp" src="/my-website/images/pfp.jpg" alt="Austin LeBlanc" loading="lazy">
        </div>
      <div class="personal-info">
        <h2>
          <strong>{infoAboutMe.firstName} {infoAboutMe.lastName}</strong> graduated
          from Michigan State University with a 3.7 GPA, obtaining a Bachelor's Degree
          in Computer Science Engineering. He is a veteran of the United States Army,
          serving roughly three and a half years as a Multichannel Transmission Systems
          Operator-Maintainer. He is CompTIA Security+ Certified through November,
          2024, and is seeking a Software Engineering position.
        </h2>
        <p>Some of my skills:</p>
        <ul>
          {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
        {!finished && <p>Site is a work in progress! :)</p>}
      </div>

    </div>
  </body>
</html>
</Layout>
