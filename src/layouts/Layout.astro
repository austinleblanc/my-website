---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/gif" href="/my-website/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<div class="header-buttons">
		<a href="/my-website/">B R E A D</a>
		<a href="/my-website/about">About Me</a>
		<a href="/my-website/projects">Projects</a>
		<a href="https://www.linkedin.com/in/austin-c-leblanc/" target="_blank" rel="noopener noreferrer">
			<img src="/my-website/images/linkedin.png" alt="linkedin"/>
		</a>

	</div>

	<body>
		<slot />
	</body>
	<footer>
		<p>&copy; Austin LeBlanc {new Date().getFullYear()} All rights reserved.</p>
	</footer>
</html>
	
	</footer>

	<style is:global>
		:root {
			--accent: 136, 58, 234;
			--accent-light: 224, 204, 250;
			--accent-dark: 49, 10, 101;
			--accent-gradient: linear-gradient(
				45deg,
				rgb(var(--accent)),
				rgb(var(--accent-light)) 30%,
				white 60%
			);
		}
		html {
			font-family: system-ui, sans-serif;
			background: #13151a;
			background-size: 224px;
		}
		code {
			font-family:
				Menlo,
				Monaco,
				Lucida Console,
				Liberation Mono,
				DejaVu Sans Mono,
				Bitstream Vera Sans Mono,
				Courier New,
				monospace;
		}
		div.container {
			display: flex;
			flex-flow: row wrap;
			justify-content: space-evenly;
			/* justify-content: center; */
		}
		body {
			background-image: url("/my-website/images/background.png");
			background-size: cover;
			display: flex;
			flex-direction: column;
			min-height: 100vh;
		}
		footer {
			margin-top: auto;
			color: gray;
			margin-left: 40%;
		}
		div.header-buttons {
			display: flex;
			flex-flow: row wrap;
			justify-content: space-evenly;
			background-color: rgb(var(--accent));
		}
		h1.page-title {
          align-self: center;
		  color: white;
        }
		img.project-image {
			max-width: 40vw;
			max-height: 50vh;
		}
		
		h1.project-desc {
			color: white;
		}
		div.project-desc-wrapper {
			max-width: 50vw;
			align-content: center;
			display: flex;
			flex-flow: row wrap;
			margin: 3px;
		}
		div.header-buttons {
			align-items: center;
		}
		div.header-buttons img {
			max-height: 40px;
		}
	</style>

		
	
  </style>


</html>
